    {<link rel="stylesheet" href="~/css/create.css" type="text/css"/>}
<h1>Duyuru Ekleyin</h1>

<form asp-action="Create" method="post">
    <div>
        <label>Başlık</label>
        <input asp-for="Title" />
    </div>
    <div>
        <label>Yazı</label>
        <textarea asp-for="Text"></textarea>
